<%= form_for @invitation do |invite| %>
<%= label_tag "E-mail" %>
<%= invite.hidden_field :inviter_id, :value => @current_user.id %>
<%= invite.hidden_field :invite_method, :value => EMAIL %>
<%= invite.text_field :email, :placeholder => "Enter friend's e-mail" %>
<%= invite.submit "Invite" %>
<% end %>