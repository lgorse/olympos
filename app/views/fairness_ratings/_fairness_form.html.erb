<% fairness = FairnessRating.find_or_initialize_by_match_id_and_rater_id(match.id, @current_user.id) %>
<%= form_for fairness do |rating| %>
  <%= rating.hidden_field :rated_id, :value => match.opponent(@current_user).id %>
  <%= rating.hidden_field :match_id, :value => match.id %>
  <div class = "rating_wrapper">
    <%= rating.label :rated_id, "rate #{match.opponent(@current_user).firstname}\'s fairness" %>
    <%= render 'fairness_ratings/rating', :rating => rating %>
  </div>
<% end %>
