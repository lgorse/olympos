<% opponent = match.opponent(@current_user) %>
<li class = "match_summary">
	<div class = "match_opponent_photo">
		<span></span>
	<%= render 'users/user_photo_partials/simple_small_user_photo', :user =>match.opponent(@current_user) %>
	
	</div>
	<div class = "match_content">	
	<%= render 'layouts/date_summary', :time_object => match.play_date.to_time %>
	<div class = "match_main_line">
	<div class = "match_info">
	<% if match.winner == @current_user %>
		<%= "You won against " %>
	<% else %>
		<%= "You lost against " %>
	<% end %>
	<%= link_to opponent.fullname, opponent, :class => "opponent" %>
	</div>
	<div class = "match_confirmation">
	<% unless match.confirmed? %>
		<% if match.player2_id == @current_user.id %>
			<%= link_to "Reject", match, :method => :delete, :class => "reject_match", :title => "Reject" %>
			<%= render 'matches/confirm', :match => match %>
		<% else %>
			<%= link_to "Cancel", match, :method => :delete, :class => "cancel_match", :title => "Cancel" %>
		<% end %>
	<% end %>
	</div>
	</div>
		<%= prompt_text(match) %>		
</li>
<div class = "separator"></div>