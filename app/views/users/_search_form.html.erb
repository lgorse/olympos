<%= form_tag search_users_path, :method => :get do %>
<%= label_tag :distance %>
<%= select_tag :distance, options_for_select([5, 10, 15, 20, 30], :selected => params[:distance])   %>
<%= text_field_tag :zip, params[:zip] ? params[:zip] : @current_user.zip %>
<%= country_select(:user, :country, ["#{@current_user.country}"]) %>
<%= submit_tag "Search" %>
<% end %>