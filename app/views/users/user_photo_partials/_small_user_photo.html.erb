<% if @current_user.facebook? %>
<%= link_to (image_tag @current_user.fb_pic_square, :class => "my_profile_button round", :size => "30x30"), user_path(@current_user), :title => "Me" %>
<% else %>
<%= link_to (image_tag @current_user.photo.url(:square), :class => "my_profile_button round") %>
<% end %>