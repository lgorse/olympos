<% recipients = conversation.participants.reject{|user| user.id == @current_user.id} %>


<li class = "conversation_summary <%= 'selected' if conversation == @conversations.first %>" id = "conversation_<%= conversation.id %>">
<%= link_to conversation, :remote => true do %>	
<div class = "conversation_link_wrapper">
	<div class = "participant_photo">
	<%= render 'users/user_photo_partials/simple_small_user_photo', :user => recipients.first %>
	</div>
	<div class = "top_row">
		<div class = "conversation_participants">
<%= recipients.collect(&:firstname).join(",") %></div>
<%= render 'layouts/date_summary', :object => conversation %>
</div>
<div class = "conversation_last_message">
<%= truncate(conversation.messages.last.body, length: 40) %>
</div>
</div>

<% end %>	
</li>
