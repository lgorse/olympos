$(function(){
	$(".new_message_form").html("<%= escape_javascript render 'messages/message_form' %>");
	var recipient_name = "<%= params[:recipient_fullname] %>";
	var recipient_id = "<%= params[:recipient_id] %>";
	var recipient = [{id: recipient_id, name: recipient_name}];
	var message_dialog = $(".dialog_new_message").dialog({
		modal: true,
		width: 450,
		resizable: false
	});
	$("form.new_message").find("#recipient_name").message_autocomplete(recipient_id.length ? recipient: '');

});